<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PopupLayoutIssue.MainPage">

    <VerticalStackLayout VerticalOptions="Center">
        <HorizontalStackLayout HorizontalOptions="Center">
            <CheckBox x:Name="ImmediateData"/>
            <Label Text="Don't delay data" VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>
        <Button Text="Open popup" HorizontalOptions="Center" VerticalOptions="Center" Clicked="OnCounterClicked"/>

    </VerticalStackLayout>
</ContentPage>
